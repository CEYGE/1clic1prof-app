<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/grey</item>
    </style>
    <style name="TitleText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="EntryText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:backgroundTint">@color/cyan</item>
    </style>
    <style name="TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BigTitleClick">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ChipStyle" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:checkable">true</item>
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="checkedIcon">@drawable/ic_mtrl_chip_checked_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="chipBackgroundColor">@color/mtrl_choice_chip_background_color</item>
        <item name="rippleColor">@color/cyan</item>
        <item name="strokeColor">@color/cyan</item>

    </style>

</resources>