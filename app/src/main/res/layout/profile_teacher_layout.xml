<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearReturnLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textReturnView"
            style="@style/TextApparence"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="Name" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearImageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearReturnLayout">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="250dp">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="@string/profile_image"
                app:srcCompat="@drawable/ic_launcher_background"
                tools:ignore="VectorDrawableCompat" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView5"
            style="@style/TextApparence"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center_horizontal"
            android:text="@string/ImageModification"
            android:textColor="@color/cyan"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearInformationLayout"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/linearLayoutLogOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearImageLayout"
        app:layout_constraintVertical_bias="0.52">


        <TextView
            android:id="@+id/textFirstNameView"
            style="@style/TextApparence"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:text="@string/FirstName"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editFirstName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.225"
            android:autofillHints="@string/FirstName"
            android:ems="10"
            android:gravity="bottom"
            android:hint="@string/FirstName"
            android:inputType="textPersonName"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/textLastNameView"
            style="@style/TextApparence"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:text="@string/LastName"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editLastName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.225"
            android:autofillHints="@string/LastName"
            android:ems="10"
            android:hint="@string/LastName"
            android:inputType="textPersonName"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/textMailView"
            style="@style/TextApparence"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:text="@string/Email_Text"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/editMail"
            style="@style/TextApparence"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.225"
            android:autofillHints="@string/Email_Text"
            android:hint="@string/Email_Text"
            android:inputType="textEmailAddress"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textPasswordView"
            style="@style/TextApparence"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:text="@string/Password_Text"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.225"
            android:autofillHints="@string/Hint_pwd"
            android:ems="10"
            android:hint="@string/Hint_pwd"
            android:inputType="textPassword"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:hint="Description"
            android:inputType="text|textMultiLine"
            android:maxLines="5"
            android:minLines="1"
            android:maxLength="150"/>


        <Spinner
            android:id="@+id/spinnerSpeciality"
            style="@style/TextApparence"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="0.15"
            android:entries="@array/Speciality"
            android:spinnerMode="dropdown" />



        <LinearLayout
            android:id="@+id/linearCBLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textCBView"
                style="@style/TextApparence"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center_vertical"
                android:text="IBAN"
                android:textSize="14sp"
                tools:ignore="NestedWeights" />

            <EditText
                android:id="@+id/editCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="@string/CB_Text"
                android:ems="10"
                android:hint="@string/CB_Text"
                android:inputType="textPersonName"
                android:textSize="14sp" />
        </LinearLayout>



        <Switch
            android:id="@+id/switchNotification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="0.2"
            android:text="@string/Notification"
            android:textSize="14sp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:onClick="Disconnect"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearInformationLayout">

        <ImageView
            android:id="@+id/imageLogOutView"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:contentDescription="@string/Icon_name"
            app:srcCompat="@drawable/rectangle" />

        <TextView
            android:id="@+id/textLogOutView"
            style="@style/TextApparence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/LogOut" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>